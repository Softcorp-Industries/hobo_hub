<!-- The article-snippet is the short version of the article that also contains the continue reading button -->

<li class="snippet">
  <article>
    <h3 class="snippet__title"> <a href="{{ post.url }}"> {{ post.data.title }}</a></h3>
    <p class="snippet__meta">by <span>{{  post.data.author }}</span> {{ post.date | postDate}}</p>
    <p class="snippet__body">{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="btn btn--primary">Continue Reading</a>
  </article>
  <img src="{{ post.data.image1 }}" alt="{{ post.data.image1Alt }}" class="snippet__image">
</li>